<div class= "populaire">
  <h3>Parcours près de chez vous</h3>
  <div class= "mieux-note">
    <% @courses.each do |course| %>
      <%= link_to course_path(course) do %>
        <div class="card-category-index" style="background-image: linear-gradient(rgba(0,0,0,0.75), rgba(0,0,0,0.7)), url(<%= cl_image_path course.photo.key %>)">
          <p class="card-course-etape"><%= course.steps.count %> étapes</p>
          <div class="card-course-main">
            <p class="card-course-name pt-5"><%= course.name %></p>
            <p class="card-course-description"><%= course.description%></p>
          </div>
          <div class="d-flex justify-content-between">
            <p class="card-course-duration ml-2"><i class="far fa-clock mb-2"></i><br><%= (course.duration_in_minutes / 60) %>h<%= (course.duration_in_minutes % 60) %></p>
            <p class="card-course-duration ml-2"><i class="fas fa-walking mb-2"></i><br><%= course.distance_in_kilometers %> km</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

