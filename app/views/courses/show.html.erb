<div class="back-grey-show">
  <div class="header-show">
    <h2><%= @course.name %> </h2>
    <p><%= (@course.duration_in_minutes) /60 %> h </p>
  </div>
  <div id="map"
       style="width: 100vw; height: 35vh;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="content-show">
    <h3>Descriptif de l'etape</h3>
    <p><%= @course.description %> </p>
  </div>
</div>

<div class="test">
  <div class="cards-step">
    <% @steps.each do |step| %>


      <%= link_to(@course) do %>
        <div class="card-step" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(<%= cl_image_path @course.photo.key, height: 300, width: 400, crop: :fill %>)">
          <p> Etape <%= step.position %> </p>
          <p> <%= step.megalith.name %> </p>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
