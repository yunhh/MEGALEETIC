<div class="back-grey-show">
  <div class="header-show">
    <h2><%= @course.name %> </h2>
    <div class="details-show">

      <p class="card-course-duration-show ml-2"><i class="far fa-clock mb-1"></i><br><%= (@course.duration_in_minutes.round(0) / 60) %>h<%= (@course.duration_in_minutes.round(0) % 60) %></p>
      <div class="card-course-rating show">
        <p class="stars"><% @course.rating.to_i.times do %>
           <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @course.rating.to_i).times do %>
           <i class="far fa-star"></i>
          <% end %>
        </p>
        <div class="reviews-list">
         <p>voir les avis</p>
        </div>
      </div>
      <div class="reviews-display">
          <h2>Commentaires</h2>


      </div>
      <p class="card-course-duration-show ml-2"><i class="fas fa-walking mb-1"></i><br><%= @course.distance_in_kilometers %> km</p>

    </div>


  </div>
  <div class="toggle-btn" >
    <span></span>

  </div>
  <div class="my-nav">
    <%= cl_image_tag current_user.photo.key, class:'avatar'%>
    <%= link_to "Les parcours", courses_path %>
    <%= link_to "Mes parcours", user_courses_path %>
    <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete%>
    <a href="">Envoyer nous vos retours</a>
  </div>
  <div id="map"
       style="width: 100vw; height: 35vh;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div id="contentshow">
    <h3>Descriptif de l'étape</h3>
    <p><%= @course.description %> </p>
  </div>


    <% @steps.each_with_index do |step, index| %>
      <div class="bla" id="description-step-<%= index %>">
        <h3>Itinéraire à suivre</h3>
        <p> <%= step.access_description %> </p>
      </div>
    <% end %>
</div>

<div class="cards-step ">
  <% @steps.each_with_index do |step, index| %>
  <div class="link-between-step"></div>
   <p class="etape-number pt-2"> étape <%= step.position %> </p>
    <%= link_to course_step_path(@course, step), class: 'no-deco' do %>

      <div class="card-step active" data-image="<%= cl_image_path @course.photo.key, height: 300, width: 400, crop: :fill %>" id="cardstep-<%= index %>" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(<%= cl_image_path @course.photo.key, height: 300, width: 400, crop: :fill %>)">
        <p> <%= step.megalith.name %> </p>
        <div class="infos pt-1">
          <p><%= step.duration_in_minutes %> min</p>
          <p><%= step.distance_in_kilometers %> km</p>
        </div>
       <p><% if  %> </p>
        <div class="bandeau-show">
          <img src="https://res.cloudinary.com/ds35idgfw/image/upload/v1587560955/Bandeau2_vm6cic.png" alt="">
        </div>
      </div>
    <% end %>
    </div>
  <% end %>

</div>

